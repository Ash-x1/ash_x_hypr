{
	// "height": 18, // Waybar height (to be removed for auto height)
	"spacing": 2, // Gaps between modules (4px)
	
	"modules-left": [
		"custom/cava",
		"hyprland/workspaces"
	],

	"modules-center": [
		"hyprland/window"
	],


	"modules-right": [
		"tray",
		"hyprland/language",
		"keyboard-state",
		//"pulseaudio",
		//"backlight",
		"clock",
		"custom/swaync"
	],
	
	//modules-left
	"custom/cava": {
		"format": "{}",
		"exec": "~/.config/hypr/scripts/cava.sh",
		"restart-interval": 1,
		"hide-empty": true,
		"tooltip": false
	},

	"hyprland/workspaces": {
		"format": "{icon}",
		"on-click": "activate",
		"format-icons": {
			"1": "一",
			"2": "二",
			"3": "三",
			"4": "四",
			"5": "五",
			"6": "六",
			"7": "七",
			"8": "八",
			"9": "九",
			"10": "十"
			//"active": "●"
		},
		"sort-by-number": true,
		"persistent-workspaces": {
			"*": 5,
			"HDMI-A-1": 3
		}
	},


	//modules-center
	"hyprland/window": {
		  "format": "{}",
		  "max-length": 30,
		  "tooltip": false,
		  "all-outputs": true
	},
	
	//modules-right
	"tray":{
		"icon-size":15,
		"spacing":5,
		"tooltip": false
	},

	"hyprland/language": {
		"format": "󰌌  {short}",
		"tooltip-format": "Language: {long}"
	},

	"keyboard-state": {
		//"numlock": true,
		"capslock": true,
		"format": "{name} {icon} ",
		"format-icons": {
		"locked": " ",
		"unlocked": ""
		}
	},
