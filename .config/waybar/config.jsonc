	"clock": {
		"format": "{:%I:%M %p}",
		"format-alt": "{:%Y-%m-%d}",
		"tooltip": false
	},

	"custom/swaync": {
		"format": "", 		          
		"on-click": "swaync-client -t",
		"on-click-right": "swaync-client -c", 
		"tooltip": false
	},
}
